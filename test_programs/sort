function insertion_sort(arr) do
    int i := 1
    int length := 0
    int pack := [arr, length]
    len(pack)
    while i < pack(1) do
        int tmp := arr(i)
        int j := i - 1
        while j > 0 do
            if a(j) > tmp do
                a(j+1) = a(j)
                j := j - 1
            eldef do
                # здесь бы понадобился break
            done
        finish a(i+1) := tmp
        done
    done
done
    
    
    
